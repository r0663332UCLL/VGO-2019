<Application x:Class="View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:View.Views"
             xmlns:viewmodel="clr-namespace:ViewModel;assembly=ViewModel">
    <Application.Resources>
        
        <DataTemplate DataType="{x:Type viewmodel:StartWindowViewModel}">
            <view:StartWindow />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodel:PlayWindowViewModel}">
            <view:PlayWindow />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodel:LevelSelectorWindowViewModel}">
            <view:LevelSelectorWindow />
        </DataTemplate>
        
    </Application.Resources>
</Application>
